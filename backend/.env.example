# TaskBuddy Backend Environment Variables

# Database
DATABASE_URL="postgresql://postgres:postgres@localhost:5432/taskbuddy?schema=public"

# JWT Secrets (generate secure random strings for production)
JWT_SECRET="your-super-secret-access-token-key-change-in-production"
JWT_REFRESH_SECRET="your-super-secret-refresh-token-key-change-in-production"

# JWT Expiration
JWT_EXPIRES_IN="1h"
JWT_REFRESH_EXPIRES_IN="7d"

# Server
PORT=3001
NODE_ENV=development

# CORS (comma-separated list of allowed origins)
CORS_ORIGINS="http://localhost:3000"

# Redis (optional, for caching and sessions)
# REDIS_URL="redis://localhost:6379"

# Rate Limiting
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100
